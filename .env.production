# Production Environment Variables
# Copy this file to .env.production.local and fill in your actual values

# Appwrite Configuration
VITE_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
VITE_APPWRITE_PROJECT_ID=your-production-project-id
VITE_APPWRITE_DATABASE_ID=your-production-database-id

# Feature Flags
VITE_ENABLE_DEMO_MODE=false
VITE_ENABLE_DEBUG_LOGGING=false

# API Configuration
VITE_API_TIMEOUT=30000
VITE_MAX_UPLOAD_SIZE=10485760

# App Configuration
VITE_APP_NAME=Fortis Secured
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=production
